                <li><a href="/Contacts/Create">Contact Us</a></li>
                <li><a href="#">Location</a></li>
                <li><a href="/testimonials">Testimonials</a></li>
                <li><a href="/freqAskQuestions">FAQ</a>
            </ul>
        </div>
    </div>

        <!--TO USE THE VIEWCOMPONENT ITS NEEDS TO BE InvokeAsync METHOD-->
        @await Component.InvokeAsync("AlertPostsViewComponent")
        <div class="container body-content">
            @RenderBody()

        </div>

        <footer>
            <div class="d-flex flex-row justify-content-around flex-wrap" id="footer-link">
                <div class="d-flex flex-column col-md-3 col-sm-6 col-12 pl-md-5">
                    <a href="#">Patients & Visitors</a>
                    <a href="#">Health Services</a>
                    <a href="Careers/">Careers</a>
                    <a href="#">Find a Doctor</a>
                </div>
                <div class="d-flex flex-column col-md-3 col-sm-6 col-12 mt-5 mt-sm-0 pl-md-5">
                    <a href="#">Privacy</a>
                    <a href="#">Terms and Conditions</a>
                    <a href="#">Legal</a>
                </div>
                <div class="d-flex flex-column col-md-3 col-sm-6 col-12 mt-5 mt-md-0 pl-md-5">
                    <a href="#">Health Canada</a>
