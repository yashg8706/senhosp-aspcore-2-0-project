@model SensenHosp.Models.AlertPosts

@{
    ViewData["Title"] = "Edit";
}

<script src="https://cdn.ckeditor.com/4.11.4/standard/ckeditor.js"></script>

<h2 class="heading heading-h2">ADMIN DASHBOARD</h2>
<h3 class="heading">Update Alert Post</h3>

<hr />
<div class="row">
    <div class="col-md-10 center-div">
        <div>
            <a asp-action="Admin"><i class="fas fa-arrow-left">&nbsp;Back to List</i></a>
        </div>
        <br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlertTitle" class="control-label"></label>
                <input asp-for="AlertTitle" class="form-control" />
                <span asp-validation-for="AlertTitle" class="text-danger"></span>
            </div>
            <div class="row form-group">
                <div class="col form-group">
                    <div class="dropdown">
                        <label class="labelname">Category</label>
                        <div class="inputbreak">
                            <select id="AlerpostStatus" name="AlerpostStatus" class="dropdown btn btn-dark dropdown-toggle btn-block" onchange="">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col form-group">
                    <label asp-for="DateEffectivity" class="control-label"></label>
                    <input asp-for="DateEffectivity" class="form-control" />
                    <span asp-validation-for="DateEffectivity" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" rows="7" cols="45" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <!--THIS IS A CKEDITOR CDN I USER THIS SO ADMIN CAN FORMAT THE TEXT FOR BETTER DESCRIPTION DISPLAY OF THE TEXT AND ALSO CAN ADD LIINKS INSIDE THE DESCRIPTION OF THE ALERTPOST-->
            <script>
                CKEDITOR.replace('Description');
            </script>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default submit" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
